name: golangci-lint
on:
  push:
    branches: ['*']
    tags: ['v*']
  pull_request:
    branches: ['*']
jobs:
  golangci:
    name: lint
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-go@v2
        with:
          go-version: '1.18'
      - name: golangci-lint
        uses: golangci/golangci-lint-action@v3.1.0
